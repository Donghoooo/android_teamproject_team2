<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginBottom="60dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
    tools:ignore="NotSibling">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/main"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입금 영수증"
                android:layout_marginLeft="80dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold" />
            <TextView
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:id="@+id/date"/>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_pass_income"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:backgroundTint="#F5F5F5"
                android:text="넘어올 값" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입금수단"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="현금"
                android:textAlignment="center"
                android:textSize="15sp"
                android:id="@+id/income_dialog_receipt"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금액"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500원"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:id="@+id/income_money_receipt" />

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="원"-->
<!--                android:layout_weight="1"-->
<!--                android:textAlignment="textStart"-->
<!--                android:textSize="15dp"-->
<!--                android:textStyle="bold"/>-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내역"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="입력된 내역"
                android:textAlignment="center"
                android:textColor="#A1A1A1"
                android:textSize="15sp"
                android:id="@+id/income_info_receipt" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="메모"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_border"
                android:hint="메모를 입력하세요"
                android:id="@+id/income_memo_receipt"
                android:gravity="start|top"
                android:scrollbars="vertical" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#F5F5F5"
            android:textColor="#4E89AE"
            android:textStyle="bold"
            android:text="확인" />
    </LinearLayout>
    </LinearLayout>
</ScrollView>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


        <!-- 하단 고정 바 -->
        <View
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bottom"
            android:layout_alignParentBottom="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:layout_alignBottom="@id/bottom_navigation">

            <ImageView
                android:id="@+id/calendar_icon"
                android:layout_width="30dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="30dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/calendar_days"/>

            <ImageView
                android:id="@+id/chart_icon"
                android:layout_width="30dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_height="30dp"
                android:src="@drawable/chart_pie"/>

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="30dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="30dp"
                android:src="@drawable/user"/>

            <ImageView
                android:id="@+id/list_icon"
                android:layout_width="30dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="30dp"
                android:src="@drawable/list"/>

            <ImageView
                android:id="@+id/search_icone"
                android:layout_width="30dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="30dp"
                android:src="@drawable/search"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>