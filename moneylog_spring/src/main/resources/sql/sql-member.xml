<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bitc.fullstack503.moneylog_spring.mapper.MemberMapper">
  <insert id="signUp" parameterType="bitc.fullstack503.moneylog_spring.dto.MemberDTO">
    insert into member(member_id, member_pw, member_name, member_email)
    values (#{memberId}, #{memberPw}, #{memberName}, #{memberEmail})
  </insert>
  
  <select id="isMember" parameterType="bitc.fullstack503.moneylog_spring.dto.MemberDTO"
          resultType="bitc.fullstack503.moneylog_spring.dto.MemberDTO">
    select *
    from member
    where member_id = #{memberId}
      and member_pw = #{memberPw}
  </select>
  
  <select id="isMemberId" parameterType="java.lang.String" resultType="java.lang.Integer">
    select count(*)
    from member
    where member_id = #{memberId}
  </select>
  
  <select id="isMemberName" parameterType="java.lang.String" resultType="java.lang.Integer">
    select count(*)
    from member
    where member_name = #{memberName}
  </select>
  
  <select id="memberInfo" parameterType="java.lang.String" resultType="bitc.fullstack503.moneylog_spring.dto.MemberDTO">
    select
  </select>
</mapper>